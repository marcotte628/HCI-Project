
@{
    ViewBag.Title = "PatientInfo";
}


<div ng-controller="patientInfoController">
    <div class="col s12 m7">
        <div class="card horizontal">
            <div class="card-stacked">
                <i class="material-icons" style="padding-top:0.5em;padding-bottom:0.5em;">
                    <a ng-click="redirect('home')" class="btn-floating btn-large waves-effect waves-light red">
                        <i class="material-icons">chevron_left</i>
                    </a>
                </i>
                <h3 style="position: absolute;margin-left: 11.5em;margin-top: 0em; padding-top: 0.4em;">Patient Information</h3>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col s12 m6">
            <div class="card" style="width: 42em;">
                <div class="card-image">
                    <img src="../images/default.PNG" style="height: 28em;">
                </div>
                <div class="card-action">
                    <a ng-click="redirect('edit')">Edit</a>
                </div>
            </div>
        </div>

        <div class="col s4 m5">
            <div class="row">
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                        <span class="card-title">Patient Information:</span>
                        <p>Name: {{name}}</p>
                        <p>DOB: {{DOB}}</p>
                        <p>Height: {{height}} cm</p>
                        <p>Weight: {{weight}} lbs</p>

                    </div>
                </div>
            </div>
            <div class="row">
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                        <span class="card-title">Notes:</span>
                        <p>
                            {{notes}}
                        </p>
                    </div>
                </div>
            </div>
            <div class="row">
                <button class="btn waves-effect waves-light" ng-click="redirect('compare')">
                    Show Diagnostics <i class="material-icons bottom">insert_chart</i>
                </button>
            </div>
        </div>
    </div>
</div>
